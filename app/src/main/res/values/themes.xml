<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MySignature" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimary</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:forceDarkAllowed">false</item>

    </style>


    <style name="textInfoLabel">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/textDesc</item>
        <item name="android:textColor">@color/textLight</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginTop">@dimen/marginHalf</item>
    </style>

    <style name="textInfo" parent="textInfoLabel">
        <item name="android:textSize">@dimen/textStandart</item>
        <item name="android:textColor">@color/textDark</item>
        <item name="android:layout_marginTop">0dp</item>
    </style>


</resources>